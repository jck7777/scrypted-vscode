{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name"        : "Scrypted Debugger",
            "type"        : "duk",
            "request"     : "attach",
            "stopOnEntry" : false,
            
            "address"     : "${config:scrypted.debugHost}",
            "port"        : 9091,

            "localRoot"   : "${workspaceRoot}",
            "debugLog"    : false,
            // "debugServer": 4711,

            "preLaunchTask": "scrypted: deploy",

            // uncomment and point to generated source and map files if using
            // a transpiler or minifier or whatever.
            // inline sourcemaps are not supported.
            "sourceMaps"  : true,
            "outDir"      : "${workspaceRoot}/out"
        },
        {
            "name"        : "Scrypted Debugger (debug debugger)",
            "type"        : "duk",
            "request"     : "attach",
            "stopOnEntry" : false,
            
            "address"     : "${config:scrypted.debugHost}",
            "port"        : 9091,

            "localRoot"   : "${workspaceRoot}",
            // "debugLog"    : true,
            // "debugServer": 4711,
            
            "preLaunchTask": "scrypted: deploy",

            // uncomment and point to generated source and map files if using
            // a transpiler or minifier or whatever.
            // inline sourcemaps are not supported.
            "sourceMaps"  : true,
            "outDir"      : "${workspaceRoot}/out",

            "debugLog"    : true,
            "debugServer": 4711,
        }
    ]
}