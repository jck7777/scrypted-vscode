{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "scrypted: deploy",
            "type": "process",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "osx": {
                "command": "${workspaceRoot}/.vscode/scrypted-deploy.sh",
                "args": ["${config:scrypted.debugHost}", "${config:scrypted.debugScriptId}", "${file}"]
            },
            "linux": {
                "command": "${workspaceRoot}/.vscode/scrypted-deploy.sh",
                "args": ["${config:scrypted.debugHost}", "${config:scrypted.debugScriptId}", "${file}"]
            }
        }
    ]
}