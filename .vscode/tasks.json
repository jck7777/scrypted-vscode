{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "scrypted: deploy",
            "type": "process",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOn": [
                "scrypted: webpack",
            ],
            "osx": {
                "command": "${workspaceRoot}/.vscode/scrypted-deploy.sh",
                "args": ["${config:scrypted.debugHost}", "${file}", "${workspaceRoot}/out"]
            },
            "linux": {
                "command": "${workspaceRoot}/.vscode/scrypted-deploy.sh",
                "args": ["${config:scrypted.debugHost}", "${file}", "${workspaceRoot}/out"]
            }
        },

        {
            "label": "scrypted: webpack",
            "type": "shell",
            "options": {
                "env": {
                    "TARGET": "${file}"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "${workspaceFolder}/node_modules/.bin/webpack-cli",
            "args": ["--config", "webpack.config.js"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },

    ]
}